#include<bits/stdc++.h>
using namespace std;
// int selectionsort(int arr[],int n){
  
// }
int main(){
    int n;
    n=5;
    int k=3;
     int arr[6]={7 ,10, 4, 3, 20, 15};
    // selectionsort(a,n);
      for(int i=0;i<n-1;i++){
        int min=i;
        for(int j=i+1;j<n;j++){
        if(arr[min]>arr[j]){
            swap(arr[min],arr[j]);
        }
        }
    }
    for(int i=0;i<n;i++){
        if(arr[i]==arr[k]){
            cout<<arr[i-1];
        }
    }
   cout<<endl;
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}

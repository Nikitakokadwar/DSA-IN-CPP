#include<bits/stdc++.h>
using namespace std;
bool isSorted(int arr[],int size){
if(size==0 || size==1){
return true;
}
if(arr[0]>arr[1]){
return false;
}
else{
bool remaingarray=isSorted(arr+1,size-1);
return remaningarray;
}
}
int main(){
int arr[5]={1,2,3,4,5};
int size=5;
ans=isSorted(arr,size);
if(ans){
cout<<"array is sorted"<<endl;
}
else
cout<<"array is not sorted"<<endl;
}

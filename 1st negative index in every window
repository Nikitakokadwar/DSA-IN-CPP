#include<bits/stdc++.h>
using namespace std;
void negativeno(int arr[],int n,int k){
   bool flag;
  for(int i=0;i<(n-k+1);i++){
   flag=false;
  
  for(int j=0;j<k;j++){
    if(arr[i+j]<0){
      cout<<arr[i+j]<<" ";
      flag=true;
      break;
    }
  }
  if(!flag){
    cout<<"0"<<" ";
  }
}
}
int main(){
  int n=5;
  int k=2;
  int arr[5]={-8,2,3,-6,10};
  negativeno(arr,5,2);
}
